<section class="cart py-16">
    <div class="order container mx-auto xl:w-1/2">
        <% if(session.cart) { %>   
        <div class="flex items-center border-b border-gray-300 pb-4">
            <img src="/img/cart-black.png" alt="">
            <h1 class="font-bold ml-4 text-2xl">Order summary</h1>
        </div>
        <div class="pizza-list">
            <% for(let prod of Object.values(session.cart.items)) { %>
            <div class="flex items-center my-8">
                <img class="w-24" src="/img/<%= prod.item.image %>" alt="">
                <div class="flex-1 ml-4">
                    <h1><%= prod.item.name %></h1>
                    <span><%= prod.item.size %></span>
                </div>
                <span class="flex-1"><%= prod.qty %>  Nos</span>
                <span class="font-bold text-lg">â‚¹<%= prod.item.price * prod.qty %></span>
            </div>
            <% } %>
        </div>
        <hr>
        <div class="text-right py-4">
            <div>
                <span class="text-lg font-bold">Total Amount:</span>
                <span class="amount text-2xl font-bold ml-2 rounded-full">â‚¹<%= session.cart.totalPrice %></span>
            </div>
            <% if(user) { %>
            <div>
                <form action="/orders" method="POST" class="mt-12" id="payment-form">
                    <input name="phone" class="border border-gray-400 p-2 w-1/2 mb-4" type="text" placeholder="Phone Number">
                    <input name="address" class="border border-gray-400 p-2 w-1/2" type="text" placeholder="Address">
                    <div class="mt-4">  
                        <div id="card-element"></div>                                                   <!--To place the card box wupo selecting the card option for payment-->                                                         <!--if name tag not given then we cant recieve these values inside the orderController-->
                        <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6" type="submit">Order Now</button>
                    </div>
                </form>
            </div>
            <% } else { %>
                <a href="/login" class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Login to continue</a>
            <% } %>
        </div>
    </div>
    <% } else { %>
    <div class="empty-cart py-8">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2">Cart Empty ðŸ˜•</h1>
            <p class="text-gray-500 text-lg mb-12">You probably haven't added anything yet.<br>
                To order something, go to the main page.</p>
            <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="empty-cart">
            <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go back</a>    
        </div>
    </div>
    <% } %>
</section>
